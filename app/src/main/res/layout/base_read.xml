<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/base_read"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:text="namenamename"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:text="1/1"/>

        <TextView
            android:id="@+id/base_read_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:text="哈哈哈哈"/>

        <com.excalibur.followproject.view.novel.AutoSplitTextView
            android:visibility="invisible"
            android:id="@+id/base_read_autoSplit"
            android:layout_width="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            app:ast_titleHeight="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"/>

        <com.excalibur.followproject.view.novel.AutoAdjustTextView
            android:id="@+id/autoAdjust"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2878DC"/>

    <com.excalibur.followproject.view.crul.CurlView
        android:id="@+id/curl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

